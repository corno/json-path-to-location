{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "inlineSourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    "include": [
      "./src"
    ]
}